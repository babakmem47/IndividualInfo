<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("نت هاب", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("تماس ها", "Index", "Individuals")
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> دستگاه شبکه <span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-network-devices">
                            <li>
                                @Html.ActionLink("روتر", "Index", "Router")
                            </li>
                            <li><a href="#">سوئیچ</a></li>
                            <li><a href="#">فایروال</a></li>
                            <li><a href="#">اکسس پوینت</a></li>
                            <li><a href="#">سایبروم</a></li>
                            <li><a href="#">سرور</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> نقاط و محل ها <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">ادارات</a></li>
                            <li><a href="#">ساختمان ها</a></li>
                            <li><a href="#">مدیریت شعب مناطق</a></li>
                            <li><a href="#">شعب</a></li>
                            <li><a href="#">خودپردازها ATMs</a></li>
                            <li><a href="#">شرکت ها</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy;  </p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
