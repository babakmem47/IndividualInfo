                // Populate Semat Select Option
                $.ajax({
                    url: "/api/semats/",
                    method: "GET"

                }).done(function (data) {
                    var sematSelectOption = $("#SematId");

                    sematSelectOption.empty();  // reset(clear)

                    sematSelectOption.append("<option value></option>");

                    $.each(data,
                        function () {
                            sematSelectOption.append($("<option />").val(this.id).text(this.name));
                        });

                }).fail(function (status) {
