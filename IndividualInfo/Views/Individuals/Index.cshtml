                    { "className": "text-center", "targets": "_all" }
                ],

                ajax: {
                    url: "/api/individuals",
                    dataSrc: ""
                },

                columns: [
                    {
                        data: "",
                        orderable: false,
                        className: "width30px",
                        //searchable: false,
                        //sortable: false,
                        render: function () {
                            return row++;
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "workPlaceDto.name",
                        className: "width95px",
                        render: function (data, type, individual) {
                            if (data !== 0)
                                return individual.workPlaceDto.workPlaceTypeDto.name + " " + individual.workPlaceDto.name;
                            else
                                return '';
                        }
                    },
                    {
                        data: "sematDto.id",
                        className: "width95px",
                        render: function (data, type, individual) {
                            if (data !== 0)
                                return individual.sematDto.name;
                            else
                                return '';
                        }
