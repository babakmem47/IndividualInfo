                        data: "sematDto.id",
                        className: "width95px",
                        render: function (data, type, individual) {
                            if (data !== 0)
                                return individual.sematDto.name;
                            else
                                return '';
                        }
                    },
                    {
                        orderable: false,
                        data: "gender",
                        render: function (data) {
                            if (data === true)
                                return "<td><i class='fa fa-female' style='font-size:14px;'></i></td>";
                            else if (data === false)
                                return "<td><i class='fa fa-male' style='font-size:14px;'></i></td>";
                            else
