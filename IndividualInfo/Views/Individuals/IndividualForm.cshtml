@using IndividualInfo.Models
@model IndividualInfo.ViewModels.IndividualViewModel

@*@functions {
    public IEnumerable<SelectListItem> SelectListItems { get; set; }
}*@

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
    <h2>افزودن جدید</h2>
}
else
{
    <h2>ویرایش</h2>
}
<br/>
@using (Html.BeginForm("Save", "Individuals", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SematId)
        @Html.DropDownListFor(m => m.SematId, new SelectList(Model.Semats, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SematId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Gender)
        @Html.DropDownListFor(m => m.Gender, Model.SelectListItems, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Gender)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.TelDirect)
        @Html.TextBoxFor(m => m.TelDirect, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TelDirect)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TelDakheli)
        @Html.TextBoxFor(m => m.TelDakheli, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TelDakheli)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Mobile)
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Mobile)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".form-control").persiaNumber();
        });
    </script>
}
